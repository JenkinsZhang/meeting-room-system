<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jenkins.common.userservice.mapper.UserMapper">
    <resultMap id="Base_Result_Map" type="com.jenkins.common.userinterface.model.User">
        <id column="id" property="id"></id>
        <result column="username" property="username"></result>
        <result column="password" property="password"></result>
        <result column="phone" property="phone"></result>
        <result column="email" property="email"></result>

    </resultMap>
    <sql id="Base_Column_List">
        id,username,password,phone,email
    </sql>

    <select id="queryUser" resultMap="Base_Result_Map">
        select
        <include refid="Base_Column_List"></include>
        from bk_user
        where email = #{email} and password = #{password}
    </select>

    <select id="selectAllUsers" resultMap="Base_Result_Map">
        select * from bk_user
    </select>

    <insert id="insert" parameterType="com.jenkins.common.userinterface.model.User">
        insert into bk_user(username,password,phone,email)
        values (#{username},#{password},#{phone},#{email})
    </insert>

    <update id="updateByEmail" parameterType="com.jenkins.common.userinterface.model.User">
        update bk_user
        set username = #{username},
            password = #{password},
            phone = #{phone},
            email = #{email}
        where email = #{email}
    </update>

    <delete id="deleteByEmail" parameterType="String">
        delete  from  bk_user
        where email = #{email}
    </delete>

</mapper>